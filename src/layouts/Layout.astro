---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="fr">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="AcquaPro - Vos spécialistes en traitement des eaux" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;700&display=swap" rel="stylesheet">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<header class="fixed w-full bg-white shadow-md z-50">
			<nav class="container mx-auto px-6 py-4">
				<div class="flex items-center justify-between">
					<a href="/" class="text-2xl font-bold text-blue-600">
						<img 
						src="/images/aquapro.png" 
						alt="AcquaPro"
						class="w-auto h-12 max-w-full"
					/>
					
					<div class="hidden md:flex space-x-8">
						<a href="/" class="text-gray-700 hover:text-blue-600">Accueil</a>
						<a href="/services" class="text-gray-700 hover:text-blue-600">Services</a>
						<a href="/applications" class="text-gray-700 hover:text-blue-600">Applications</a>
						<a href="/contact" class="text-gray-700 hover:text-blue-600">Carrières et Contact</a>
					</div>
				</div>
			</nav>
		</header>
		<main class="pt-20">
			<slot />
		</main>
		<footer class="bg-gray-800 text-white mt-20">
			<div class="container mx-auto px-6 py-8">
				<div class="grid grid-cols-1 md:grid-cols-3 gap-8">
					<div>
						<h3 class="text-xl font-bold mb-4">AcquaPro</h3>
						<p>Vos projets notre source de vie</p>
					</div>
					<div>
						<h3 class="text-xl font-bold mb-4">Contact</h3>
						<p>Canada</p>
						<p>info@acquapro.com</p>
					</div>
					<div>
						<h3 class="text-xl font-bold mb-4">Présence internationale</h3>
						<p>Canada | Chine | Sénégal</p>
					</div>
				</div>
				<div class="border-t border-gray-700 mt-8 pt-8 text-center">
					<p>&copy; {new Date().getFullYear()} AcquaPro. Tous droits réservés.</p>
				</div>
			</div>
		</footer>
	</body>
</html>

<style is:global>
	:root {
		--accent: 29, 78, 216;
	}
	html {
		font-family: 'Montserrat', system-ui, sans-serif;
		scroll-behavior: smooth;
	}
	body {
		margin: 0;
		background: white;
		color: #333;
	}
</style>